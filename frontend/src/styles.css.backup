/* You can add global styles to this file, and also import other style files */
@import 'bootstrap/dist/css/bootstrap.min.css';
@import url('https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css');

/* ========================================
   NUEVA PALETA DE COLORES PROFESIONAL
   ======================================== */
:root {
  /* Colores Principales */
  --primary-color: #2C3E50;        /* Azul oscuro profesional */
  --secondary-color: #16A085;      /* Verde azulado (teal) */
  --accent-color: #E67E22;         /* Naranja cálido */
  --success-color: #27AE60;        /* Verde éxito */
  --warning-color: #F39C12;        /* Amarillo advertencia */
  --danger-color: #E74C3C;         /* Rojo peligro */
  --info-color: #3498DB;           /* Azul información */
  
  /* Colores de Fondo */
  --bg-primary: #ECF0F1;           /* Gris muy claro */
  --bg-secondary: #FFFFFF;         /* Blanco */
  --bg-dark: #34495E;              /* Azul gris oscuro */
  
  /* Colores de Texto */
  --text-primary: #2C3E50;
  --text-secondary: #7F8C8D;
  --text-light: #BDC3C7;
  --text-white: #FFFFFF;
  
  /* Sombras */
  --shadow-sm: 0 2px 4px rgba(0,0,0,0.08);
  --shadow-md: 0 4px 6px rgba(0,0,0,0.1);
  --shadow-lg: 0 10px 25px rgba(0,0,0,0.15);
  --shadow-xl: 0 20px 40px rgba(0,0,0,0.2);
  
  /* Bordes */
  --border-radius-sm: 0.375rem;
  --border-radius-md: 0.5rem;
  --border-radius-lg: 0.75rem;
  --border-radius-xl: 1rem;
}

/* ========================================
   ESTILOS GLOBALES
   ======================================== */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  background: linear-gradient(135deg, #ECF0F1 0%, #E8EBED 100%);
  color: var(--text-primary);
  line-height: 1.6;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

h1, h2, h3, h4, h5, h6 {
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 1rem;
}

h1 { font-size: 2.5rem; }
h2 { font-size: 2rem; }
h3 { font-size: 1.75rem; }
h4 { font-size: 1.5rem; }
h5 { font-size: 1.25rem; }
h6 { font-size: 1rem; }

/* ========================================
   NAVBAR MEJORADA
   ======================================== */
.navbar {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--bg-dark) 100%) !important;
  box-shadow: var(--shadow-md);
  padding: 1rem 0;
  border-bottom: 3px solid var(--secondary-color);
}

.navbar-brand {
  font-size: 1.5rem;
  font-weight: 700;
  letter-spacing: 0.5px;
  color: var(--text-white) !important;
  transition: transform 0.2s ease;
}

.navbar-brand:hover {
  transform: scale(1.05);
}

.nav-link {
  color: rgba(255, 255, 255, 0.9) !important;
  font-weight: 500;
  padding: 0.5rem 1rem !important;
  margin: 0 0.25rem;
  border-radius: var(--border-radius-sm);
  transition: all 0.3s ease;
  position: relative;
}

.nav-link:hover {
  background-color: rgba(255, 255, 255, 0.1);
  color: var(--text-white) !important;
}

.nav-link.active {
  background-color: var(--secondary-color) !important;
  color: var(--text-white) !important;
  box-shadow: 0 2px 8px rgba(22, 160, 133, 0.3);
}

/* ========================================
   CONTAINER Y LAYOUT
   ======================================== */
.container-fluid {
  max-width: 1400px;
  margin: 0 auto;
}

.container-main {
  padding: 2rem 1rem;
  min-height: calc(100vh - 180px);
}

/* ========================================
   CARDS MEJORADAS
   ======================================== */
.card {
  border: none;
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-md);
  transition: all 0.3s ease;
  background: var(--bg-secondary);
  overflow: hidden;
  margin-bottom: 1.5rem;
}

.card:hover {
  box-shadow: var(--shadow-lg);
  transform: translateY(-2px);
}

.card-header {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--bg-dark) 100%);
  color: var(--text-white);
  font-weight: 600;
  padding: 1.25rem 1.5rem;
  border-bottom: 3px solid var(--secondary-color);
}

.card-body {
  padding: 1.5rem;
}

.card.border-primary { border-left: 4px solid var(--primary-color) !important; }
.card.border-success { border-left: 4px solid var(--success-color) !important; }
.card.border-info { border-left: 4px solid var(--info-color) !important; }
.card.border-warning { border-left: 4px solid var(--warning-color) !important; }
.card.border-danger { border-left: 4px solid var(--danger-color) !important; }

/* ========================================
   BOTONES MEJORADOS
   ======================================== */
.btn {
  font-weight: 500;
  padding: 0.625rem 1.5rem;
  border-radius: var(--border-radius-md);
  transition: all 0.3s ease;
  border: none;
  cursor: pointer;
  box-shadow: var(--shadow-sm);
}

.btn:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
}

.btn:active {
  transform: translateY(0);
}

.btn-primary {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--bg-dark) 100%);
  color: var(--text-white);
}

.btn-primary:hover {
  background: linear-gradient(135deg, var(--bg-dark) 0%, var(--primary-color) 100%);
  color: var(--text-white);
}

.btn-success {
  background: linear-gradient(135deg, var(--success-color) 0%, #229954 100%);
  color: var(--text-white);
}

.btn-info {
  background: linear-gradient(135deg, var(--info-color) 0%, #2874A6 100%);
  color: var(--text-white);
}

.btn-warning {
  background: linear-gradient(135deg, var(--warning-color) 0%, #D68910 100%);
  color: var(--text-white);
}

.btn-danger {
  background: linear-gradient(135deg, var(--danger-color) 0%, #C0392B 100%);
  color: var(--text-white);
}

.btn-secondary {
  background: linear-gradient(135deg, #95A5A6 0%, #7F8C8D 100%);
  color: var(--text-white);
}

.btn-outline-primary {
  border: 2px solid var(--primary-color);
  color: var(--primary-color);
  background: transparent;
  box-shadow: none;
}

.btn-outline-primary:hover {
  background: var(--primary-color);
  color: var(--text-white);
  border-color: var(--primary-color);
}

.btn-outline-danger {
  border: 2px solid var(--danger-color);
  color: var(--danger-color);
  background: transparent;
  box-shadow: none;
}

.btn-outline-danger:hover {
  background: var(--danger-color);
  color: var(--text-white);
  border-color: var(--danger-color);
}

.btn-outline-light {
  border: 2px solid rgba(255, 255, 255, 0.5);
  color: var(--text-white);
  background: transparent;
  box-shadow: none;
}

.btn-outline-light:hover {
  background: rgba(255, 255, 255, 0.2);
  border-color: var(--text-white);
  color: var(--text-white);
}

/* ========================================
   TABLAS MEJORADAS
   ======================================== */
.table {
  margin-bottom: 0;
  border-collapse: separate;
  border-spacing: 0;
}

.table thead th {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--bg-dark) 100%);
  color: var(--text-white);
  font-weight: 600;
  padding: 1rem;
  border: none;
  text-transform: uppercase;
  font-size: 0.85rem;
  letter-spacing: 0.5px;
}

.table tbody tr {
  transition: all 0.2s ease;
  border-bottom: 1px solid #E8EBED;
}

.table tbody tr:hover {
  background-color: #F8F9FA;
  transform: scale(1.01);
  box-shadow: var(--shadow-sm);
}

.table tbody td {
  padding: 1rem;
  vertical-align: middle;
  color: var(--text-primary);
}

.table-responsive {
  border-radius: var(--border-radius-md);
  overflow: hidden;
}

.table-hover tbody tr:hover {
  background-color: #F8F9FA;
}

/* ========================================
   BADGES MEJORADOS
   ======================================== */
.badge {
  padding: 0.5rem 1rem;
  border-radius: var(--border-radius-lg);
  font-weight: 600;
  font-size: 0.85rem;
  letter-spacing: 0.3px;
  box-shadow: var(--shadow-sm);
}

.bg-success {
  background: linear-gradient(135deg, var(--success-color) 0%, #229954 100%) !important;
}

.bg-secondary {
  background: linear-gradient(135deg, #95A5A6 0%, #7F8C8D 100%) !important;
}

.bg-primary {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--bg-dark) 100%) !important;
}

.bg-info {
  background: linear-gradient(135deg, var(--info-color) 0%, #2874A6 100%) !important;
}

.bg-warning {
  background: linear-gradient(135deg, var(--warning-color) 0%, #D68910 100%) !important;
}

.bg-light {
  background: #ECF0F1 !important;
  color: var(--text-primary) !important;
}

/* ========================================
   FORMULARIOS MEJORADOS
   ======================================== */
.form-control, .form-select {
  border: 2px solid #E8EBED;
  border-radius: var(--border-radius-md);
  padding: 0.75rem 1rem;
  transition: all 0.3s ease;
  background: var(--bg-secondary);
  color: var(--text-primary);
}

.form-control:focus, .form-select:focus {
  border-color: var(--secondary-color);
  box-shadow: 0 0 0 0.2rem rgba(22, 160, 133, 0.15);
  outline: none;
  background-color: var(--bg-secondary);
}

.form-label {
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 0.5rem;
  font-size: 0.95rem;
}

.form-check-input:checked {
  background-color: var(--secondary-color);
  border-color: var(--secondary-color);
}

/* ========================================
   SPINNER
   ======================================== */
.spinner-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 300px;
}

.spinner-border {
  width: 3rem;
  height: 3rem;
  border-width: 0.3rem;
}

.spinner-border-sm {
  width: 1rem;
  height: 1rem;
  border-width: 0.15rem;
}

.text-primary .spinner-border {
  color: var(--primary-color);
}

/* ========================================
   LOGIN MEJORADO
   ======================================== */
.login-container {
  min-height: 100vh;
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--bg-dark) 50%, var(--secondary-color) 100%);
  position: relative;
  overflow: hidden;
}

.login-container::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 1px, transparent 1px);
  background-size: 50px 50px;
  animation: moveBackground 20s linear infinite;
}

@keyframes moveBackground {
  0% { transform: translate(0, 0); }
  100% { transform: translate(50px, 50px); }
}

.login-card {
  border: none;
  border-radius: var(--border-radius-xl);
  box-shadow: var(--shadow-xl);
  backdrop-filter: blur(10px);
  background: rgba(255, 255, 255, 0.95);
  position: relative;
  z-index: 1;
}

/* ========================================
   FOOTER MEJORADO
   ======================================== */
footer {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--bg-dark) 100%);
  color: var(--text-white);
  padding: 2rem 0;
  margin-top: 3rem;
  box-shadow: 0 -4px 6px rgba(0,0,0,0.1);
}

footer p {
  margin: 0;
  opacity: 0.9;
}

/* ========================================
   MODAL MEJORADO
   ======================================== */
.modal-content {
  border: none;
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-xl);
}

.modal-header {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--bg-dark) 100%);
  color: var(--text-white);
  border-bottom: 3px solid var(--secondary-color);
  padding: 1.5rem;
}

.modal-title {
  color: var(--text-white);
  font-weight: 600;
}

.modal-body {
  padding: 2rem;
}

.modal-footer {
  border-top: 1px solid #E8EBED;
  padding: 1.5rem;
}

.btn-close {
  filter: invert(1);
  opacity: 0.8;
}

.btn-close:hover {
  opacity: 1;
}

/* ========================================
   ALERTAS MEJORADAS
   ======================================== */
.alert {
  border: none;
  border-radius: var(--border-radius-md);
  padding: 1rem 1.5rem;
  box-shadow: var(--shadow-sm);
  border-left: 4px solid;
}

.alert-danger {
  background-color: #FADBD8;
  color: #922B21;
  border-left-color: var(--danger-color);
}

.alert-success {
  background-color: #D5F4E6;
  color: #0E6655;
  border-left-color: var(--success-color);
}

.alert-warning {
  background-color: #FCF3CF;
  color: #7D6608;
  border-left-color: var(--warning-color);
}

.alert-info {
  background-color: #D6EAF8;
  color: #1B4F72;
  border-left-color: var(--info-color);
}

/* ========================================
   ANIMACIONES
   ======================================== */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.fade-in {
  animation: fadeIn 0.5s ease-in-out;
}

/* ========================================
   UTILITIES
   ======================================== */
.text-muted {
  color: var(--text-secondary) !important;
}

.text-primary {
  color: var(--primary-color) !important;
}

.text-success {
  color: var(--success-color) !important;
}

.text-warning {
  color: var(--warning-color) !important;
}

.text-danger {
  color: var(--danger-color) !important;
}

.text-info {
  color: var(--info-color) !important;
}

.text-end {
  text-align: right !important;
}

.text-center {
  text-align: center !important;
}

.visually-hidden {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border-width: 0;
}

/* ========================================
   PAGE HEADER
   ======================================== */
.page-header {
  margin-bottom: 2rem;
}

.page-header h2 {
  color: var(--primary-color);
  font-weight: 700;
  margin-bottom: 0.5rem;
}

.page-header h2 i {
  margin-right: 0.5rem;
  color: var(--secondary-color);
}

.page-header p {
  color: var(--text-secondary);
  margin-bottom: 0;
}

/* ========================================
   FILTERS SECTION
   ======================================== */
.filters-section {
  background: #F8F9FA;
  padding: 1.25rem;
  border-radius: var(--border-radius-md);
  border: 1px solid #E8EBED;
  margin-bottom: 1.5rem;
}

.input-group-text {
  background: white;
  border-right: none;
  color: var(--text-secondary);
}

.input-group .form-control {
  border-left: none;
}

.input-group .form-control:focus {
  border-left: none;
}

.input-group:focus-within .input-group-text {
  border-color: var(--secondary-color);
}

/* ========================================
   TABLE IMPROVEMENTS
   ======================================== */
.table-responsive {
  border-radius: var(--border-radius-md);
  overflow: hidden;
}

.table thead th {
  position: sticky;
  top: 0;
  z-index: 10;
}

.table tbody td code {
  background: #F8F9FA;
  padding: 0.25rem 0.5rem;
  border-radius: 0.25rem;
  color: var(--danger-color);
  font-size: 0.9rem;
}

.table tbody td a {
  color: var(--primary-color);
  transition: color 0.2s ease;
}

.table tbody td a:hover {
  color: var(--secondary-color);
}

/* ========================================
   BADGE IMPROVEMENTS
   ======================================== */
.badge.bg-info {
  background: linear-gradient(135deg, var(--info-color) 0%, #2874A6 100%) !important;
}

/* ========================================
   RESPONSIVE
   ======================================== */
@media (max-width: 768px) {
  .container-main {
    padding: 1rem;
  }
  
  h1 { font-size: 2rem; }
  h2 { font-size: 1.75rem; }
  h3 { font-size: 1.5rem; }
  
  .card-body {
    padding: 1rem;
  }
  
  .table thead th,
  .table tbody td {
    padding: 0.75rem 0.5rem;
    font-size: 0.9rem;
  }
  
  .navbar-brand {
    font-size: 1.25rem;
  }
  
  .nav-link {
    padding: 0.5rem 0.75rem !important;
  }
  
  .btn {
    padding: 0.5rem 1rem;
    font-size: 0.9rem;
  }

  .filters-section {
    padding: 1rem;
  }

  .page-header h2 {
    font-size: 1.5rem;
  }
}
