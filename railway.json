{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "dotnet publish backend/NobleStep.Api.csproj -c Release -o out"
  },
  "deploy": {
    "startCommand": "dotnet out/NobleStep.Api.dll",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
